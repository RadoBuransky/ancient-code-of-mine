--------------------------------------------------------------------------------
||                            TabSheet - OSTATNE                              ||
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
*)

procedure THlavneOkno.PageControlMainChange(Sender: TObject);
begin
  if (PageControlMain.ActivePage.PageIndex = 2) then Vykres.Prekresli;
end;

end.
